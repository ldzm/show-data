<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
	"-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
	"http://struts.apache.org/dtds/struts-2.3.dtd">

<struts>

	<constant name="struts.enable.DynamicMethodInvocation" value="false" />
	<constant name="struts.devMode" value="true" />

	<package name="lee" extends="json-default">
		<action name="home" class="option.IndexAction">
			<result>/WEB-INF/home.jsp</result>
		</action>
		<action name="optionAction" class="option.AverageResponseTimeAction">
			<result type="json">
				<param name="noCache">true</param>
				<param name="excludeNullProperties">true</param>
			</result>
		</action>
		<action name="analysis" class="option.AnalysisForwordAction">
			<result>/WEB-INF/analysis.jsp</result>
		</action>
		<action name="analysisAction" class="option.AnalysisAction">
			<result>/WEB-INF/analysis.jsp</result>
			<result name="error">/WEB-INF/analysis.jsp</result> 
		</action>
	</package>

</struts>
